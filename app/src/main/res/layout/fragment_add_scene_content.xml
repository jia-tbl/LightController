<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/barBackground"
    android:padding="@dimen/appbar_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_cont_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="@dimen/btn_margin"
                android:text="选择控制器"
                android:textColor="@android:color/white"/>

            <Spinner
                android:id="@+id/controllerSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:padding="@dimen/btn_margin"
                android:text="控制器"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/controllerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/btn_margin"
                android:textColor="@android:color/white"
                android:text="dafaf"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <ImageView
            style="@style/PersonalLine"
            android:contentDescription="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/btn_margin">

                <CheckBox
                    android:id="@+id/id_ck_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/choose_content"
                    android:text="BTN-A"
                    android:textColor="@android:color/white"/>
                <LinearLayout
                    android:id="@+id/btn1_WC_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/btn_margin"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/btn_margin"
                        android:text="暖色："
                        android:textColor="@android:color/white"/>

                    <Spinner
                        android:id="@+id/btn1_W_Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/btn_margin"
                        android:text="冷色："
                        android:textColor="@android:color/white"/>

                    <Spinner
                        android:id="@+id/btn1_C_Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_ck_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/btn_margin">

                <CheckBox
                    android:id="@+id/id_ck_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/choose_content"
                    android:text="BTN-A"
                    android:textColor="@android:color/white"/>
                <LinearLayout
                    android:id="@+id/btn2_WC_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/btn_margin"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/btn_margin"
                        android:text="暖色："
                        android:textColor="@android:color/white"/>

                    <Spinner
                        android:id="@+id/btn2_W_Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/btn_margin"
                        android:text="冷色："
                        android:textColor="@android:color/white"/>

                    <Spinner
                        android:id="@+id/btn2_C_Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ck_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/btn_margin">

                <CheckBox
                    android:id="@+id/id_ck_btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/choose_content"
                    android:text="BTN-A"
                    android:textColor="@android:color/white"/>
                <LinearLayout
                    android:id="@+id/btn3_WC_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/btn_margin"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/btn_margin"
                        android:text="暖色："
                        android:textColor="@android:color/white"/>

                    <Spinner
                        android:id="@+id/btn3_W_Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/btn_margin"
                        android:text="冷色："
                        android:textColor="@android:color/white"/>

                    <Spinner
                        android:id="@+id/btn3_C_Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ck_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/btn_margin">

                <CheckBox
                    android:id="@+id/id_ck_btn4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/choose_content"
                    android:text="BTN-A"
                    android:textColor="@android:color/white"/>
                <LinearLayout
                    android:id="@+id/btn4_WC_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/btn_margin"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/btn_margin"
                        android:text="暖色："
                        android:textColor="@android:color/white"/>

                    <Spinner
                        android:id="@+id/btn4_W_Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/btn_margin"
                        android:text="冷色："
                        android:textColor="@android:color/white"/>

                    <Spinner
                        android:id="@+id/btn4_C_Spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/id_btn_add_scene"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/commit_btn"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
